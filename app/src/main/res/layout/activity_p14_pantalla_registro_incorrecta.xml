<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="horizontal"
    tools:context=".P14_PantallaRegistroLibroIncorrecto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="#f5f5f5">

            <TextView
                android:id="@+id/textView_NombreApp_1"
                android:layout_width="193dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif"
                android:text="LOGOTIPO"
                android:textColor="#2A2A2A"
                android:textSize="48sp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageFilterButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/btn_dialog" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#f5f5f5"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="239dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/texto_registro_libro_incorrecto"
            android:textAlignment="center"
            android:textColor="#2A2A2A"
            android:textSize="20sp"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f5f5f5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReintentar"
            android:layout_width="296dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:text="Reintentar"
            android:textColor="#F5F5F5"
            android:background="@drawable/button_border_3"
            android:textSize="32sp"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>