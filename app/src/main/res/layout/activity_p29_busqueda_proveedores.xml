<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="horizontal"
    tools:context=".P29_BusquedaProveedores">

    <LinearLayout
        android:id="@+id/contenidoPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="65dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/flechaVolver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Volver"
                android:src="@drawable/arrow_back_24px" />

            <TextView
                android:id="@+id/textView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="-2dp"
                android:layout_toStartOf="@id/botonBuscar"
                android:layout_toEndOf="@id/flechaVolver"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="PROVEEDORES"
                android:textColor="#2A2A2A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/botonBuscar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Buscar"
                app:srcCompat="@android:drawable/ic_menu_search" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f5f5f5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNombre"
            android:layout_width="296dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_border_1"
            android:text="Nombre"
            android:textAllCaps="false"
            android:textColor="#2A2A2A"
            android:textSize="28sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCategoria"
            android:layout_width="296dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_border_1"
            android:text="CategorÃ­a"
            android:textAllCaps="false"
            android:textColor="#2A2A2A"
            android:textSize="28sp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/selector_icon_color"
        app:itemTextColor="@color/selector_text_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_bar_menu" />

</RelativeLayout>