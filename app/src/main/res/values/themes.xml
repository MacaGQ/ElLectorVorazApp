<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ElLectorVoraz" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="actionBarStyle">@style/actionBarStyle</item>
        <item name="actionBarTitleColor">@color/text</item>

        <!--TransiciÃ³n para logo-->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="actionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
       <!-- <item name="displayOptions">showTitle</item> -->
        <item name="displayOptions">none</item>
    </style>

    <style name="bottomNavBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">69dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="itemIconTint">@color/selector_icon_color</item>
        <item name="itemTextColor">@color/selector_icon_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

</resources>